    <h1>MENU</h1>
    <!-- Copy in a card from Bootstrap -->
    <!-- Put the card in an EJS for loop and dynamically plug in your values -->
<div class="container">
  <div class="row">
    <% for (let i = 0; i < menu.length; i++) { %>
      <div class="card" style="width: 18rem;">
        <img src="<%= menu[i].picture%>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= menu[i].name %></h5>
          <p class="card-text"><%= menu[i].description%> (<%= menu[i].dietary%> <%= menu[i].allergies%>) - <%= menu[i].rating%>/10</p>
          <a href="#" class="btn btn-primary">$<%= menu[i].price %></a>
            <button class="adminButton" id="<%= menu[i]._id %>">DELETE</button>
            <form class="adminButton2" data-id="<%= menu[i]._id %>">
              <label>Menu</label>
              <input type="text"name="price">
             <button type="submit">UPDATE</button>
              </form>
        </div>
      </div>  
          <% } %>
          </div>
          </div>
      <a href="/form.html">Add new menu</a>
      <script src="admin.js"></script>
    <!-- Link Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

